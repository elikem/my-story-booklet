<div id="main">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <div class="login">
        <%= devise_error_messages! %>

        <h2>Sign up</h2><span style="color: #F4511E">(Check your email after signing up)</span> <br><br>
        <div class="panel panel-default panel-shadow">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="panel-body">
              <div class="form-group">
                <%= f.label :username %> <br>
                <p><em style="color: #448aff;">Example: <b>gail_Porter-15</b></em></p>
                <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder: 'Enter username' %>
              </div>
              <div class="form-group">
                <%= f.label 'Email Address' %>
                <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
              </div>
              <div class="form-group">
                <div class="media">
                  <div class="media-body media-middle">
                    <%= f.label :password %>
                  </div>
                  <div class="media-right media-middle">
                    <a href="#" class="small pull-right">Forgot?</a>
                  </div>
                </div>
                <% if @validatable %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
              </div>
              <div class="form-group margin-none">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
              </div>
            </div>
            <div class="form-group text-center">
              <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
                  Sign Up <i class="md md-assignment"></i>
              <% end %>
            </div>
          <% end %>

        </div>

        <div>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>