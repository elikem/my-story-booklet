<!DOCTYPE html>
<html>
<head>
  <title>My Story Booklet</title>
  <%= stylesheet_link_tag 'static_pages', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'static_pages', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!-- Google Fonts -->
  <link href="http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic" rel="stylesheet" type="text/css">
  <link href="http://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css">

  <!--[if lt IE 9]>
  <%= javascript_include_tag 'material_design/ie8-responsive-file-warning', 'data-turbolinks-track' => true %>
  <![endif]-->


  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
  <![endif]-->
</head>

<body class="loaded">

<div class="loader">
  <div class="animated rubberBand spinner"></div>
</div>

<!-- Layout Wrapper -->
<div class="layout-wrapper page" id="page">
  <header id="header" class="section transparent white-header header active-section">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="logo">
            <a href="/" title="My Story Booklet" target="_self">
              <%= image_tag('material_design/white-logo.png', class: 'white-logo standard-logo middle-content') %>
              <%= image_tag('material_design/white-logo.png', class: 'white-logo retina-logo middle-content') %>
            </a>
          </div>
        </div>
        <div class="col-md-9 menu-col text-right">
          <div class="menu">
            <ul class="list-inline">
              <% if user_signed_in? %>
                  <li><a href="<%= story_path(current_user.username) %>">GO TO MY STORY BOOKLET</a></li>
              <% else %>
                  <li><a href="<%= new_user_registration_path %>">SIGN UP</a></li>
              <% end %>

              <% if user_signed_in? %>
                  <li><a href="<%= destroy_user_session_path %>">LOGOUT</a></li>
              <% else %>
                  <li><a href="<%= new_user_session_path %>">LOGIN</a></li>
              <% end %>

              <li><a href="mailto:tsw@cru.org">CONTACT US</a></li>
            </ul>
          </div>
        </div>
        <div class="header-line">
          <div class="line"></div>
        </div>
        <div class="menu-toggle">
          <i class="ti-menu"></i>
        </div>
      </div>
    </div>
  </header>